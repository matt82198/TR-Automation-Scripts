# =============================================================================
# Streamlit Cloud Secrets Configuration
# =============================================================================
# Copy this file to .streamlit/secrets.toml and fill in your values.
# NEVER commit secrets.toml to version control!
#
# On Streamlit Cloud, paste the contents into the Secrets section of your app settings.
# =============================================================================

# -----------------------------------------------------------------------------
# Google OAuth Authentication
# -----------------------------------------------------------------------------
# Get these from Google Cloud Console:
# 1. Go to https://console.cloud.google.com/
# 2. Create or select a project
# 3. Go to APIs & Services > Credentials
# 4. Create OAuth 2.0 Client ID (Web application)
# 5. Add authorized redirect URI: https://YOUR-APP.streamlit.app/oauth2callback
# -----------------------------------------------------------------------------

[auth]
redirect_uri = "https://YOUR-APP-NAME.streamlit.app/oauth2callback"
cookie_secret = "GENERATE_A_RANDOM_32_CHARACTER_STRING_HERE"
client_id = "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com"
client_secret = "YOUR_GOOGLE_CLIENT_SECRET"
server_metadata_url = "https://accounts.google.com/.well-known/openid-configuration"

# -----------------------------------------------------------------------------
# API Keys
# -----------------------------------------------------------------------------

# Squarespace API Key (required)
# Get from: Squarespace > Settings > Advanced > Developer API Keys
SQUARESPACE_API_KEY = "your_squarespace_api_key_here"

# Stripe API Key (read-only operations)
# Get from: Stripe Dashboard > Developers > API Keys (use Restricted key with read-only)
STRIPE_API_KEY = "sk_live_your_stripe_key_here"

# PayPal API Credentials
# Get from: PayPal Developer > My Apps & Credentials
PAYPAL_CLIENT_ID = "your_paypal_client_id_here"
PAYPAL_CLIENT_SECRET = "your_paypal_client_secret_here"
PAYPAL_MODE = "live"  # or "sandbox" for testing

# -----------------------------------------------------------------------------
# Email Configuration (for notifications)
# -----------------------------------------------------------------------------
# For Gmail, use an App Password:
# 1. Enable 2FA on your Google account
# 2. Go to Google Account > Security > App passwords
# 3. Generate a new app password for "Mail"

EMAIL_HOST = "smtp.gmail.com"
EMAIL_PORT = "587"
EMAIL_USER = "your_email@thetanneryrow.com"
EMAIL_PASSWORD = "your_gmail_app_password_here"
EMAIL_RECIPIENT = "matt@thetanneryrow.com"

# -----------------------------------------------------------------------------
# Business Configuration
# -----------------------------------------------------------------------------

SHIP_FROM_STATE = "GA"

# -----------------------------------------------------------------------------
# Authorized Users
# -----------------------------------------------------------------------------
# List of email addresses allowed to access the application.
# Users with @thetanneryrow.com domain are automatically authorized.
# Add personal emails here if employees use non-company accounts.

[authorized_users]
emails = [
    "matt@thetanneryrow.com",
    "sueeyles@thetanneryrow.com",
    # Add more authorized emails as needed
]

# -----------------------------------------------------------------------------
# Google Sheets Connection (for persistent data storage)
# -----------------------------------------------------------------------------
# This replaces local CSV files for cloud deployment.
#
# Setup:
# 1. Create a Google Cloud service account
# 2. Download the JSON key file
# 3. Create a Google Sheet with worksheets: import_log, missing_inventory, leather_coefficients
# 4. Share the sheet with the service account email
# 5. Fill in the values below from the JSON key file

[connections.gsheets]
spreadsheet = "https://docs.google.com/spreadsheets/d/YOUR_SPREADSHEET_ID/edit"
worksheet = "0"
type = "service_account"
project_id = "your-project-id"
private_key_id = "your_private_key_id"
private_key = "-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
client_email = "your-service-account@your-project.iam.gserviceaccount.com"
client_id = "123456789012345678901"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com"
